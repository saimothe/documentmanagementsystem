!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    %title= content_for?(:title) ? yield(:title) : 'Document Management System'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements

    /[if lt IE 7]
      = stylesheet_link_tag "http://blueimp.github.com/cdn/css/bootstrap-ie6.min.css"
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"

    = stylesheet_link_tag 'application', :media => 'all'
    = javascript_include_tag 'application'

    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    = favicon_link_tag 'favicon.ico'

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to(t("Document Management System"), root_path, :class => "brand")
          .container.nav-collapse
            %ul.nav.pull-right
              %li= link_to 'Upload New', new_document_path

    .container
      .content
        = render "shared/flash_messages"
        = yield

    .container
      %footer

    = yield :javascript